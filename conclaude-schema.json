{
  "$id": "https://github.com/conneroisu/conclaude/releases/latest/download/conclaude-schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "definitions": {
    "NotificationsConfig": {
      "description": "Configuration for system notifications",
      "properties": {
        "enabled": {
          "default": false,
          "description": "Whether notifications are enabled",
          "type": "boolean"
        },
        "hooks": {
          "default": [],
          "description": "List of hook names that should trigger notifications. Use [\"*\"] for all hooks",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "show_errors": {
          "default": false,
          "description": "Whether to show error notifications (hook failures, system errors)",
          "type": "boolean"
        },
        "show_success": {
          "default": false,
          "description": "Whether to show success notifications (hook completion, successful operations)",
          "type": "boolean"
        },
        "show_system_events": {
          "default": true,
          "description": "Whether to show system event notifications (session start/end, configuration loaded)",
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "PreToolUseConfig": {
      "description": "Configuration for pre tool use hooks",
      "properties": {
        "generatedFileMessage": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "preventAdditions": {
          "default": [],
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "preventGeneratedFileEdits": {
          "default": true,
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "RulesConfig": {
      "description": "Configuration interface for validation rules",
      "properties": {
        "preventRootAdditions": {
          "default": false,
          "type": "boolean"
        },
        "toolUsageValidation": {
          "default": [],
          "items": {
            "$ref": "#/definitions/ToolUsageRule"
          },
          "type": "array"
        },
        "uneditableFiles": {
          "default": [],
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "StopCommand": {
      "description": "Configuration for individual stop commands with optional messages",
      "properties": {
        "message": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "run": {
          "type": "string"
        },
        "showStderr": {
          "default": null,
          "type": [
            "boolean",
            "null"
          ]
        },
        "showStdout": {
          "default": null,
          "type": [
            "boolean",
            "null"
          ]
        }
      },
      "required": [
        "run"
      ],
      "type": "object"
    },
    "StopConfig": {
      "description": "Configuration interface for stop hook commands",
      "properties": {
        "commands": {
          "default": [],
          "items": {
            "$ref": "#/definitions/StopCommand"
          },
          "type": "array"
        },
        "infinite": {
          "default": false,
          "type": "boolean"
        },
        "infiniteMessage": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "rounds": {
          "default": null,
          "format": "uint32",
          "minimum": 0.0,
          "type": [
            "integer",
            "null"
          ]
        },
        "run": {
          "default": "",
          "type": "string"
        }
      },
      "type": "object"
    },
    "ToolUsageRule": {
      "description": "Tool usage validation rule",
      "properties": {
        "action": {
          "type": "string"
        },
        "message": {
          "type": [
            "string",
            "null"
          ]
        },
        "pattern": {
          "type": "string"
        },
        "tool": {
          "type": "string"
        }
      },
      "required": [
        "action",
        "pattern",
        "tool"
      ],
      "type": "object"
    }
  },
  "description": "Configuration schema for Conclaude - Claude Code hook handler",
  "properties": {
    "notifications": {
      "allOf": [
        {
          "$ref": "#/definitions/NotificationsConfig"
        }
      ],
      "default": {
        "enabled": false,
        "hooks": [],
        "show_errors": false,
        "show_success": false,
        "show_system_events": true
      }
    },
    "preToolUse": {
      "allOf": [
        {
          "$ref": "#/definitions/PreToolUseConfig"
        }
      ],
      "default": {
        "generatedFileMessage": null,
        "preventAdditions": [],
        "preventGeneratedFileEdits": false
      }
    },
    "rules": {
      "allOf": [
        {
          "$ref": "#/definitions/RulesConfig"
        }
      ],
      "default": {
        "preventRootAdditions": true,
        "toolUsageValidation": [],
        "uneditableFiles": []
      }
    },
    "stop": {
      "allOf": [
        {
          "$ref": "#/definitions/StopConfig"
        }
      ],
      "default": {
        "commands": [],
        "infinite": false,
        "infiniteMessage": null,
        "rounds": null,
        "run": ""
      }
    }
  },
  "title": "Conclaude Configuration",
  "type": "object"
}