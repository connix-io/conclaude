{
  "$id": "https://github.com/connix-io/conclaude/releases/latest/download/conclaude-schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "definitions": {
    "NotificationsConfig": {
      "additionalProperties": false,
      "description": "Configuration for system notifications",
      "properties": {
        "enabled": {
          "default": false,
          "description": "Whether notifications are enabled",
          "type": "boolean"
        },
        "hooks": {
          "default": [],
          "description": "List of hook names that should trigger notifications. Use [\"*\"] for all hooks",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "showErrors": {
          "default": false,
          "description": "Whether to show error notifications",
          "type": "boolean"
        },
        "showSuccess": {
          "default": false,
          "description": "Whether to show success notifications",
          "type": "boolean"
        },
        "showSystemEvents": {
          "default": true,
          "description": "Whether to show system event notifications",
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "PermissionRequestConfig": {
      "additionalProperties": false,
      "description": "Configuration for permission request hooks",
      "properties": {
        "allow": {
          "default": null,
          "description": "Tools to explicitly allow (supports glob patterns)",
          "items": {
            "type": "string"
          },
          "type": [
            "array",
            "null"
          ]
        },
        "default": {
          "description": "Default action when a tool is requested: \"allow\" or \"deny\"",
          "type": "string"
        },
        "deny": {
          "default": null,
          "description": "Tools to explicitly deny (supports glob patterns)",
          "items": {
            "type": "string"
          },
          "type": [
            "array",
            "null"
          ]
        }
      },
      "required": [
        "default"
      ],
      "type": "object"
    },
    "PreToolUseConfig": {
      "additionalProperties": false,
      "description": "Configuration for pre tool use hooks",
      "properties": {
        "generatedFileMessage": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "preventAdditions": {
          "default": [],
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "preventGeneratedFileEdits": {
          "default": true,
          "type": "boolean"
        },
        "preventRootAdditions": {
          "default": true,
          "type": "boolean"
        },
        "preventUpdateGitIgnored": {
          "default": false,
          "description": "Block Claude from modifying or creating files that match .gitignore patterns",
          "type": "boolean"
        },
        "toolUsageValidation": {
          "default": [],
          "items": {
            "$ref": "#/definitions/ToolUsageRule"
          },
          "type": "array"
        },
        "uneditableFiles": {
          "default": [],
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "StopCommand": {
      "additionalProperties": false,
      "description": "Configuration for individual stop commands with optional messages",
      "properties": {
        "maxOutputLines": {
          "default": null,
          "format": "uint32",
          "maximum": 10000.0,
          "minimum": 1.0,
          "type": [
            "integer",
            "null"
          ]
        },
        "message": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "run": {
          "type": "string"
        },
        "showStderr": {
          "default": null,
          "type": [
            "boolean",
            "null"
          ]
        },
        "showStdout": {
          "default": null,
          "type": [
            "boolean",
            "null"
          ]
        }
      },
      "required": [
        "run"
      ],
      "type": "object"
    },
    "StopConfig": {
      "additionalProperties": false,
      "description": "Configuration interface for stop hook commands",
      "properties": {
        "commands": {
          "default": [],
          "items": {
            "$ref": "#/definitions/StopCommand"
          },
          "type": "array"
        },
        "infinite": {
          "default": false,
          "type": "boolean"
        },
        "infiniteMessage": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "rounds": {
          "default": null,
          "format": "uint32",
          "minimum": 0.0,
          "type": [
            "integer",
            "null"
          ]
        }
      },
      "type": "object"
    },
    "ToolUsageRule": {
      "additionalProperties": false,
      "description": "Tool usage validation rule",
      "properties": {
        "action": {
          "type": "string"
        },
        "commandPattern": {
          "type": [
            "string",
            "null"
          ]
        },
        "matchMode": {
          "type": [
            "string",
            "null"
          ]
        },
        "message": {
          "type": [
            "string",
            "null"
          ]
        },
        "pattern": {
          "type": "string"
        },
        "tool": {
          "type": "string"
        }
      },
      "required": [
        "action",
        "pattern",
        "tool"
      ],
      "type": "object"
    }
  },
  "description": "Configuration schema for Conclaude - Claude Code hook handler",
  "properties": {
    "notifications": {
      "allOf": [
        {
          "$ref": "#/definitions/NotificationsConfig"
        }
      ],
      "default": {
        "enabled": false,
        "hooks": [],
        "showErrors": false,
        "showSuccess": false,
        "showSystemEvents": false
      }
    },
    "permissionRequest": {
      "anyOf": [
        {
          "$ref": "#/definitions/PermissionRequestConfig"
        },
        {
          "type": "null"
        }
      ],
      "default": null
    },
    "preToolUse": {
      "allOf": [
        {
          "$ref": "#/definitions/PreToolUseConfig"
        }
      ],
      "default": {
        "generatedFileMessage": null,
        "preventAdditions": [],
        "preventGeneratedFileEdits": true,
        "preventRootAdditions": true,
        "preventUpdateGitIgnored": false,
        "toolUsageValidation": [],
        "uneditableFiles": []
      }
    },
    "stop": {
      "allOf": [
        {
          "$ref": "#/definitions/StopConfig"
        }
      ],
      "default": {
        "commands": [],
        "infinite": false,
        "infiniteMessage": null,
        "rounds": null
      }
    }
  },
  "title": "Conclaude Configuration",
  "type": "object"
}