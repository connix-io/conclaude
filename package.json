{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "conclaude",
	"version": "0.1.1",
	"description": "Claude Code hook handler CLI tool that processes hook events and manages lifecycle hooks for tool usage, session management, and transcript processing",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/conneroisu/conclaude.git"
	},
	"keywords": [
		"claude",
		"claude-code",
		"hooks",
		"cli",
		"typescript",
		"bun",
		"ai",
		"automation"
	],
	"author": "Conner Ohnesorge",
	"license": "MIT",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"conclaude": "dist/conclaude.js"
	},
	"files": [
		"dist/**/*",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "bun build src/index.ts --target=node --outfile=dist/conclaude.js --external=cosmiconfig --external=yaml --external=winston --external=yargs && chmod +x dist/conclaude.js",
		"build:js": "bun build src/index.ts --target=node --outfile=dist/index.js --external=cosmiconfig --external=yaml --external=winston --external=yargs",
		"prepublishOnly": "bun run build:js && bun run build",
		"test": "bun test",
		"lint": "bun x tsc --noEmit",
		"typecheck": "bun x tsc --noEmit",
		"schema:generate": "ts-json-schema-generator --path 'src/config.ts' --type 'ConclaudeConfig' --out 'schema.json' --strict-tuples"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/minimatch": "^6.0.0",
		"@types/yargs": "^17.0.33",
		"ts-json-schema-generator": "^2.3.0",
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"cosmiconfig": "^9.0.0",
		"minimatch": "^10.0.3",
		"winston": "^3.17.0",
		"yaml": "^2.8.1",
		"yargs": "^17.7.2"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
